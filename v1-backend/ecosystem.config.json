{
  "apps": [
    {
      "name": "careconnect",
      "script": "./server.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "500M",
      "exp_backoff_restart_delay": 2000,
      "restart_delay": 4000,
      "autorestart": true,
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "kill_timeout": 5000,
      "listen_timeout": 10000,
      "shutdown_with_message": true,
      "wait_ready": true
    }
  ]
}
