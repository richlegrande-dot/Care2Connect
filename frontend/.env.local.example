# Frontend Environment Variables (.env.local)
# Copy this file to .env.local:
#   cp .env.local.example .env.local
#
# SECURITY: Never commit .env.local -- only this template is in git.
# See also: backend/.env.example

# ============================================================================
# API CONNECTIVITY
# ============================================================================

# Public API URL (used by browser-side fetch calls via next.config.js rewrite)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Internal backend URL (used by /papi/* server-side proxy, no /api suffix)
# CRITICAL: This must NOT include /api -- papi route appends paths directly.
BACKEND_INTERNAL_URL=http://localhost:3001

# ============================================================================
# SITE / DOMAIN
# ============================================================================

# Frontend public URL (used for canonical links, OG tags)
NEXT_PUBLIC_FRONTEND_URL=https://care2connects.org

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable V2 intake wizard (/onboarding/v2)
NEXT_PUBLIC_ENABLE_V2_INTAKE=true

# ============================================================================
# DEVELOPMENT / TESTING
# ============================================================================

# Provider dashboard smoke-test token (dev only, not a real secret)
NEXT_PUBLIC_PROVIDER_DASHBOARD_TOKEN=care2-provider-smoke-test-2026
