# V1 Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Payment Configuration
# Get these values from your Stripe Dashboard (https://dashboard.stripe.com)

# Backend secret key - found at Developers > API Keys in Stripe Dashboard
# Use sk_test_... for development, sk_live_... for production
STRIPE_SECRET_KEY=

# Webhook endpoint secret - created when you add webhook endpoint in Stripe
# Found at Developers > Webhooks > [Your Endpoint] > Signing secret
# Can be left blank until webhook is configured in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=

# Organization Information (for IRS-compliant receipts)
ORG_LEGAL_NAME=CareConnect Foundation
ORG_EIN=00-0000000
ORG_ADDRESS=123 Main St, City, ST ZIP
ORG_PHONE=(555) 123-4567
ORG_WEBSITE=https://careconnect.org
ORG_EMAIL=receipts@careconnect.org

# Fiscal Sponsorship (Optional - set ORG_STATUS=fiscal_sponsor if applicable)
ORG_STATUS=independent
FISCAL_SPONSOR_NAME=
FISCAL_SPONSOR_EIN=

# Application Configuration
# The domain where your frontend is hosted (used for Stripe redirects)
APP_DOMAIN=http://localhost:3000

# Email Provider Configuration (V1.7)
# Options: sendgrid | mailgun | ses | none
# Default: none (logs emails without sending - safe for development)
EMAIL_PROVIDER=none

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS SES Configuration (if using AWS SES)
SES_ACCESS_KEY=
SES_SECRET_KEY=
SES_REGION=us-east-1

# Node.js environment
NODE_ENV=development

# Server port
PORT=3001