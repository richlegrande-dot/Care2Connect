# CareConnect System Environment Variables

# ============================================================================= 
# DATABASE CONFIGURATION
# =============================================================================
# Database Mode: Controls where your database runs
# - local: Use Docker PostgreSQL container (recommended for development)
# - remote: Use cloud-hosted database (Prisma Accelerate or production DB)
DB_MODE="local"

# Database Connection
# For local mode: Must point to localhost:5432 or Docker container
# For remote mode: Can point to any PostgreSQL server
DATABASE_URL="postgresql://username:password@localhost:5432/careconnect"

# OpenAI API
OPENAI_API_KEY="your_openai_api_key_here"

# Supabase (Optional Authentication)
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Job Search APIs
INDEED_API_KEY="your_indeed_api_key"
ADZUNA_API_ID="your_adzuna_api_id"
ADZUNA_API_KEY="your_adzuna_api_key"

# Local Resources API
FINDHELP_API_KEY="your_findhelp_api_key"

# Stripe Payment Configuration
# Get these values from your Stripe Dashboard (https://dashboard.stripe.com)

# Backend secret key - found at Developers > API Keys in Stripe Dashboard
# Use sk_test_... for development, sk_live_... for production
STRIPE_SECRET_KEY=

# Frontend publishable key - safe to expose in client-side code
# Use pk_test_... for development, pk_live_... for production  
STRIPE_PUBLISHABLE_KEY=

# Webhook endpoint secret - created when you add webhook endpoint in Stripe
# Found at Developers > Webhooks > [Your Endpoint] > Signing secret
# Can be left blank until webhook is configured in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=

# Organization Information (for IRS-compliant receipts)
ORG_LEGAL_NAME="CareConnect Foundation"
ORG_EIN="00-0000000"
ORG_ADDRESS="123 Main St, City, ST ZIP"
ORG_PHONE="(555) 123-4567"
ORG_WEBSITE="https://careconnect.org"

# Application Settings
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"
APP_DOMAIN="http://localhost:3000"
PORT=3001

# Security
JWT_SECRET="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_32_character_encryption_key_here"

# File Storage (Optional - for audio files)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_BUCKET_NAME="careconnect-audio-files"
AWS_REGION="us-east-1"

# Speech Intelligence - Transcription Engines
# EVTS (Efficient Voice Transcription Service) - Local/cheaper option
EVTS_MODEL_PATH="/path/to/evts/model"
EVTS_BINARY_PATH="/path/to/evts/binary"

# Speech Intelligence - Smoke Test Configuration
# Prefer EVTS (local/cheaper) over OpenAI for smoke tests (default: true)
SPEECH_SMOKE_PREFER_EVTS=true

# Allow fallback to OpenAI if EVTS fails (default: true)
SPEECH_SMOKE_FALLBACK_OPENAI=true

# Smoke test interval in hours (default: 6)
SPEECH_SMOKE_INTERVAL_HOURS=6

# Full smoke test interval including real transcription (default: 24 hours)
SPEECH_SMOKE_TEST_INTERVAL_HOURS=24